@model CreateContactDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="form-validation">
    <form class="form-valide"  method="post">
        <div class="form-group row">
            <label class="col-lg-4 col-form-label" for="val-username">
                Adınız <span class="text-danger">*</span>
            </label>
            <div class="col-lg-6">
                <input type="text" class="form-control"  asp-for="Name" placeholder="Adınız">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-lg-4 col-form-label" for="val-email">
                Soyadınız <span class="text-danger">*</span>
            </label>
            <div class="col-lg-6">
                <input type="text" class="form-control" asp-for="Surname" placeholder="Soyasınız">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-lg-4 col-form-label" for="val-password">
                Email <span class="text-danger">*</span>
            </label>
            <div class="col-lg-6">
                <input type="email" class="form-control" asp-for="Email" placeholder="Email Adresiniz">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-lg-4 col-form-label" for="val-confirm-password">
                Konu <span class="text-danger">*</span>
            </label>
            <div class="col-lg-6">
                <input type="text" class="form-control" asp-for="Subject" placeholder="Konu">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-lg-4 col-form-label" for="val-suggestions">
                Mesajınız <span class="text-danger">*</span>
            </label>
            <div class="col-lg-6">
                <textarea class="form-control" asp-for="Message" rows="7" placeholder="Mesajınızı Buraya Yazınız.."></textarea>
            </div>
        </div>
   
        <div class="form-group row">
            <div class="col-lg-8 ml-auto">
                <button type="submit" class="btn btn-primary">Gönder</button>
            </div>
        </div>
    </form>
</div>

