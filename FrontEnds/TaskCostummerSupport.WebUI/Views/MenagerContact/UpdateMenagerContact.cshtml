@model UpdateMenagerContactDto
@{
    ViewData["Title"] = "UpdateMenagerContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<form method="post" >
    <input type="hidden" asp-for="ContactId" />

    <label>Adınız</label>
    <input type="text" class="form-control" asp-for="Name" readonly/>
    <br />

    <label>Soyadınız</label>
    <input type="text" class="form-control" asp-for="Surname" readonly />
    <br />
    <label>Mail</label>
    <input type="text" class="form-control" asp-for="Email" readonly  />
    <br />
    <label>Gönderilen Tarih</label>
    <input type="text" class="form-control" asp-for="Status" />
    <br />
    <label>Gönderilen Tarih</label>
    <input type="date" class="form-control" asp-for="SendDate" readonly />
    <br />
    <label>Konu</label>
    <input type="text" class="form-control" asp-for="Subject" readonly />
    <br />
    <label>Mesajınız</label>
    <textarea class="form-control" asp-for="Message" rows="7" readonly></textarea>
    <br />
    <button class="btn btn-outline-primary">Geri Dön</button>
</form>




















































