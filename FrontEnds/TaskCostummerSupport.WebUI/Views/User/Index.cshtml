@model List<GetUserDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Ad</th>
		<th>Soyad</th>
		<th>Kullanıcı Adı</th>
		<th>Mail</th>
		<th>Güncelle</th>
		<th>Sil</th>
	</tr>

	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<td>@item.Name</td>
			<td>@item.Surname</td>
			<td>@item.Username</td>
			<td>@item.Email</td>
			<td><a href="/User/UpdateUser/@item.AppUserId/" class="btn btn-outline-success">Güncelle</a></td>
			<td><a href="/User/RemoveUser/@item.AppUserId/" class="btn btn-outline-danger">Sil</a></td>

		</tr>
	}

</table>

<a href="/User/CreateUser/" class="btn btn-outline-primary">Yeni Üye Ekle</a>

